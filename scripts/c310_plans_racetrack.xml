      <description>
      </description>
      <condition>
        guidance/wp-distance lt 30
        ap/active-waypoint eq 3
      </condition>
      <set name="ap/heading_setpoint" value="0"/>
      <set name="ap/heading-setpoint-select" value="0"/>
